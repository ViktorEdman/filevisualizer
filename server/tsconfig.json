{
  "compilerOptions": {

    "target": "es2016",                      
    "lib": ["es6"],                  
    "rootDir": "src",              
    "allowJs": true,           
    "outDir": "build",         
    "esModuleInterop": true,                 
    "forceConsistentCasingInFileNames": true,
    "strict": true,                          
    "noImplicitAny": true,                   
    "skipLibCheck": true,
    "module":"CommonJS",
    "moduleResolution": "node"
    
  },
  "exclude": ["static", "build"],
  "include": ["/**/*.ts"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
